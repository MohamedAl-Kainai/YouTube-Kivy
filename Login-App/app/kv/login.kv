<Login>:
    md_bg_color:app.theme_cls.primary_dark

    MDBoxLayout:
        pos_hint:{'center_x':0,'center_y':1}
        canvas:
            Color:
                rgba:app.theme_cls.primary_color
            Ellipse:
                pos: self.pos
                size: self.size[0]*2,self.size[1]

    MDFloatLayout:
        pos_hint:{'y':.05}
        size_hint:1,None
        size:1,dp(20)
        MDTextButton:
            text:'help?'
            pos_hint:{'center_x':.5,'y':1}

        MDTextButton:
            text:'create new account!'
            pos_hint:{'center_x':.5,'y':0}

    MDFloatLayout: # Login Box
        size_hint:None,None
        size:dp(280),dp(250)
        pos_hint:{'center_x':.5,'center_y':.6}
        md_bg_color:app.theme_cls.primary_light
        radius:[dp(20)]*4

        Image:
            source:'app/images/icon.png'
            pos_hint:{'center_x':.5,'center_y':.8}
            size_hint:None,None
            size:dp(70),dp(70)

        MDTextFieldRound:
            id:username
            icon_left: "email"
            hint_text: "username"
            pos_hint:{'center_x':.5,'center_y':.5}
            size_hint:.8,None
            normal_color:app.theme_cls.primary_dark

        MDTextFieldRound:
            id:password
            icon_left: "key"
            hint_text: "password"
            pos_hint:{'center_x':.5,'center_y':.35}
            size_hint:.8,None
            normal_color:app.theme_cls.primary_dark

        MDFillRoundFlatButton:
            text:'login'
            pos_hint:{'center_x':.5,'center_y':.15}
            increment_width:dp(220)
            height:dp(31)

    MDIconButton:
        id:ColorButton
        icon:'format-color-fill'
        on_release:
            app.color.open()
